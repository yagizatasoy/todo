<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TodoApp</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <style>
        .container {
            margin-top: 50px;
        }
    </style>
</head>
<body>
<div class="container">
    <h1>Weekly Assigned Tasks</h1>
    <table class="table table-bordered">
        <thead class="thead-dark">
        <tr>
            <th>Developer</th>
            <th>Day</th>
            <th>Provider Name</th>
            <th>Task ID</th>
            <th>Task Difficulty</th>
            <th>Task Duration</th>
            <th>Workload</th>
        </tr>
        </thead>
        <tbody>
        {% if assignments is not empty %}
            {% for developer, days in assignments %}
                {% for day, tasks in days %}
                    {% for task in tasks %}
                        <tr>
                            <td>{{ developer }}</td>
                            <td>{{ day }}</td>
                            <td>{{ task.getProviderName() }}</td>
                            <td>{{ task.getTaskId() }}</td>
                            <td>{{ task.getDifficulty() }}</td>
                            <td>{{ task.getDuration() }}</td>
                            <td>{{ task.getAssignedDuration() }}</td>
                        </tr>
                    {% endfor %}
                {% endfor %}
            {% endfor %}
        {% endif %}
        </tbody>
    </table>
</div>
</body>
</html>
